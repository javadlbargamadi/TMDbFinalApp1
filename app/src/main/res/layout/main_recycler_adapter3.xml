<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        app:cardElevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgPosterSearchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backdrop_test" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardElevation="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/imageCardView"
        app:layout_constraintEnd_toEndOf="@id/imageCardView"
        app:layout_constraintStart_toStartOf="@id/imageCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMovieNameSearchResult"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="23sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/main_search_icon_shape_default"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Gladiator"
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/btnSaveToFavorites"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/main_search_icon_shape_selector"
                android:src="@drawable/ic_favorite_red" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


